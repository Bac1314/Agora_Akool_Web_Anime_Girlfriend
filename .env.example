# Agora Configuration
# Get these from your Agora Console: https://console.agora.io/
AGORA_APP_ID=your_agora_app_id_here
AGORA_API_KEY=your_agora_api_key_here
AGORA_API_SECRET=your_agora_api_secret_here

# Akool Configuration  
# Contact Agora sales to purchase Akool API access
AKOOL_API_KEY=your_akool_api_key_here
AKOOL_AVATAR_ID=your_avatar_id_here

# ASR (Automatic Speech Recognition) Configuration
# Choose your ASR provider: azure, openai, elevenlabs, etc.
ASR_VENDOR=azure
ASR_API_KEY=your_asr_api_key_here
ASR_REGION=your_asr_region_here
ASR_LANGUAGE=en-US

# LLM (Large Language Model) Configuration
# For custom LLM endpoints (or use standard providers via URL)
LLM_URL=your_custom_llm_url_here
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=gpt-4
LLM_SYSTEM_PROMPT=You are a friendly AI anime girlfriend. Respond naturally in a caring, playful manner. Keep responses brief and conversational since this is voice-to-voice communication. Avoid long paragraphs and speak as if having a real conversation.

# TTS (Text-to-Speech) Configuration
# Choose your TTS provider: microsoft, openai, elevenlabs, etc.
TTS_VENDOR=microsoft
TTS_API_KEY=your_tts_api_key_here
TTS_REGION=your_tts_region_here
TTS_VOICE=en-US-AriaNeural
TTS_SPEED=1.0

# Server Configuration
PORT=3000

# Optional: Development Settings
NODE_ENV=development